<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/title"
            style="@style/AppTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/task_priority_widget_heading"
            android:contentDescription="@string/task_priority_widget_heading"
            android:background="@color/primary"
            />
        <ListView
            android:id="@+id/task_priority_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <TextView android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppBodyText"
            android:text="@string/priority_widget_no_item_label"/>
    </LinearLayout>
</FrameLayout>