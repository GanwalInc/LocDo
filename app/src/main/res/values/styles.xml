<resources>
<!-- Base application theme. -->
<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="toolbarStyle">@style/Toolbar</item>
</style>


<!-- Settings activity theme. -->
<style name="SettingsTheme" parent="AppTheme">
</style>

<style name="AppTheme.Main" parent="@style/AppTheme"/>

<style name="AppTheme.Details" parent="@style/AppTheme"/>

<!-- main activity toolbar style -->
<style name="Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="popupTheme">@style/Theme.AppCompat.Light</item>
</style>

    <style name="ListItemMainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItemSecText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>



    <style name="AppBodyLabelText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTitleText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBodyText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


</resources>
